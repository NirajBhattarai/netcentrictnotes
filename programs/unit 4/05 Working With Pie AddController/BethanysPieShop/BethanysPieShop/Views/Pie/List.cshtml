@model PieListViewModel

<h1>@Model.CurrentCategory</h1>

<a href="@Url.Action("AddPie", "Pie")" class="btn btn-primary">Add Pie</a>

<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var pie in Model.Pies)
    {
        <div class="col">
            <div class="card pie-card">
                <img src="@pie.ImageThumbnailUrl" class="card-img-top" alt="@pie.Name">
                <div class="card-body pie-button">
                    <h4 class="d-grid">
                    </h4>

                    <div class="d-flex justify-content-between mt-2">
                        <h2 class="text-start">
                            <a class="pie-link">@pie.Name</a>
                        </h2>
                        <h5 class="text-nowrap">
                            @pie.Price.ToString("c")
                        </h5>
                        <a href="@Url.Action("EditPie", "Pie", new { id = pie.PieId })" class="btn btn-secondary mt-2">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>